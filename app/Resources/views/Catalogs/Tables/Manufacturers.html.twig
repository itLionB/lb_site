{% extends 'base.html.twig' %}

{% block body %}

    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <a class="navbar-brand" href="{{ path('home') }}">Lion Buildings</a>
            <ul class="nav navbar-nav">
                <li class="active"><a href="{{ path('catalog') }}">Catalogs</a></li>
                <li><a href="{{ path('installation') }}">Installation</a></li>
                <li><a href="{{ path('show_dashboard') }}">Dashboard</a></li>
            </ul>
        </div>
    </nav>

    <div class="container">
        <a class="btn btn-primary pull-left" href="{{ path('catalog') }}">Back</a>
        <a class="btn btn-info pull-right" href="{{ path('new_manufacturer') }}" >Add new</a><br><br>
        <div class="panel panel-info">
      <div class="panel-heading panel-heading-info">
        <h3 class="panel-title">Manufacturers Available</h3>
      </div>
      <div class="panel-body">
        <center>
        <table class="table table-hover">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Phone Number</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for manufacturer in manufacturer %}
                    <tr>
                      <th scope="row">{{ manufacturer.id }}</th>
                      <th scope="row">{{ manufacturer.name }}</th>
                      <th scope="row">{{ manufacturer.email }}</th>
                      <th scope="row">{{ manufacturer.number }}</th>
                        <td>
                        button
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        </center>
      </div>
    </div>
    </div>

{% endblock %}