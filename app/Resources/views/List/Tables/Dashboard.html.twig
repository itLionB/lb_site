{% extends 'base.html.twig' %}


{% block title %}Dashboard{% endblock %}


{% block body %}
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>

    <script language="JavaScript" src="https://code.jquery.com/jquery-1.11.1.min.js" type="text/javascript"></script>
    <script language="JavaScript" src="https://cdn.datatables.net/1.10.4/js/jquery.dataTables.min.js" type="text/javascript"></script>
    <script language="JavaScript" src="https://cdn.datatables.net/plug-ins/3cfcc339e89/integration/bootstrap/3/dataTables.bootstrap.js" type="text/javascript"></script>
    <link rel="stylesheet" type="text/css" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="http://cdn.datatables.net/plug-ins/3cfcc339e89/integration/bootstrap/3/dataTables.bootstrap.css">
    <link rel="stylesheet" type="text/css" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
      <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <style type="text/css">
        body {
            background: rgb(230,230,230);
            background: linear-gradient(90deg, rgba(230,230,230,1) 0%, rgba(163,163,163,1) 0%, rgba(255,255,255,1) 50%, rgba(147,147,147,1) 100%);
        }
    </style>
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <a class="navbar-brand" href="{{ path('home') }}">Lion Buildings</a>
            <ul class="nav navbar-nav">
            {% if role == 'SuperAdmin' or role == 'Admin' %}
                <li><a href="{{ path('catalog') }}">Catalogs</a></li>
                <li class=""><a href="{{ path('installation') }}">Installation</a></li>
            {% endif %}
            <li><a href="{{ path('list') }}">Lists</a></li>
            </ul>
            <a class="btn btn-danger navbar-btn pull-right" href="{{ logout_path('main') }}">close sesion</a>  
        <span class="pull-right li-user glyphicon glyphicon-user"> {{ user }}</span>  
        </div>
    </nav>

    <div class="container">
        <center><h1>Dashboard</h1></center>
        <div class="container bootstrap snippet">
            <div class="row">

                <div class="col-lg-2 col-sm-6">
                    <div class="circle-tile ">
                        <div class="circle-tile-content blue">
                            <div class="circle-tile-description text-faded"> Missing Confirmation</div>
                            <div class="circle-tile-number text-faded ">{{ installationCount }}</div>
                            <a class="circle-tile-footer"  class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal" href="#">More Info<i class="fa fa-chevron-circle-right"></i></a>
                        </div>
                    </div>
                </div>
     
                <div class="col-lg-2 col-sm-6">
                    <div class="circle-tile ">
                        <div class="circle-tile-content orange">
                            <div class="circle-tile-description text-faded"> Orders not sent to manufacturer </div>
                            <div class="circle-tile-number text-faded ">120</div>
                            <a class="circle-tile-footer"  class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal" href="#">More Info<i class="fa fa-chevron-circle-right"></i></a>
                        </div>
                    </div>
                </div>  

                <div class="col-lg-2 col-sm-6">
                    <div class="circle-tile ">
                        <div class="circle-tile-content red">
                            <div class="circle-tile-description text-faded">Require sites specifics drawings? </div>
                            <div class="circle-tile-number text-faded ">17</div>
                            <a class="circle-tile-footer"  class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal" href="#">More Info<i class="fa fa-chevron-circle-right"></i></a>
                        </div>
                    </div>
                </div>  

                <div class="col-lg-2 col-sm-6">
                    <div class="circle-tile ">
                        <div class="circle-tile-content purple">
                            <div class="circle-tile-description text-faded"> Sites specific not ordered </div>
                            <div class="circle-tile-number text-faded ">2</div>
                            <a class="circle-tile-footer"  class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal" href="#">More Info<i class="fa fa-chevron-circle-right"></i></a>
                        </div>
                    </div>
                </div> 

                <div class="col-lg-2 col-sm-6">
                    <div class="circle-tile ">
                        <div class="circle-tile-content yellow">
                            <div class="circle-tile-description text-faded"> Customers without Installation Date </div>
                            <div class="circle-tile-number text-faded ">13</div>
                            <a class="circle-tile-footer"  class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal" href="#">More Info<i class="fa fa-chevron-circle-right"></i></a>
                        </div>
                    </div>
                </div>

                <div class="col-lg-2 col-sm-6">
                    <div class="circle-tile ">
                        <div class="circle-tile-content green">
                            <div class="circle-tile-description text-faded">Installations delayed </div>
                            <div class="circle-tile-number text-faded ">90</div>
                            <a class="circle-tile-footer"  class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal" href="#">More Info<i class="fa fa-chevron-circle-right"></i></a>
                        </div>
                    </div>
                </div>

                <div class="col-lg-2 col-sm-6">
                    <div class="circle-tile ">
                        <div class="circle-tile-content green-s">
                            <div class="circle-tile-description text-faded">Hot Installations</div>
                            <div class="circle-tile-number text-faded ">30</div>
                            <a class="circle-tile-footer"  class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal" href="#">More Info<i class="fa fa-chevron-circle-right"></i></a>
                        </div>
                    </div>
                </div>
            
            </div> 
        </div>  
    </div>

    <!-- Modal -->
    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Modal Header</h4>
                </div>
            <div class="modal-body">

    <div class="panel panel-primary "> 
      <div class="panel-heading ">
        <h3 class="panel-title">Installations</h3>
      </div>
      <div class="panel-body">
        <center>
          <table id="datatable" class="table table-hover">
              <thead class="thead-dark">
                  <tr>
                    <th scope="col">Customer Name</th>
                    <th scope="col">Customer Phone</th>
                    <th scope="col">Added as Lead</th>
                    <th scope="col">Created On</th>
                    <th scope="col">Actions</th>
                  </tr>
              </thead>
            <tbody>
              {% for installation in installation %}
                <tr>
                  <th scope="row">{{ installation.customerName }}</th>
                  <th scope="row">{{ installation.customerPhone }}</th>
                  <th scope="row">{{ installation.addedLead|date("m/d/Y") }}</th>
                  <th scope="row">{{ installation.registerCreated|date("m/d/Y") }}</th>
                  <td>
                    <a href="{{ path("edit_changes_info", {"id": installation.id}) }}" class="btn btn-success">Add Missing Confirmation</a>
                  </td>
                </tr>
              {% endfor %}
            </tbody>
          </table>
        </center>
      </div>
    </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>

  

  {% block javascripts %}
    <script>
        $(document).ready(function() {
            $('#datatable').dataTable();
        } );
    </script>
  {% endblock %}
{% endblock %}